<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/movie_poster_iv"
        android:layout_width="@dimen/poster_width"
        android:layout_height="@dimen/poster_hight"
        app:srcCompat="@drawable/default_poster"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/movie_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toRightOf="@+id/movie_poster_iv"
        android:layout_marginLeft="20dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="10"
        android:isIndicator="true"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_name_tv"
        app:layout_constraintLeft_toLeftOf="@+id/movie_name_tv" />

    <Button
        android:id="@+id/mark_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mark_fav"
        android:onClick="saveFavorite"
        style="@style/Widget.AppCompat.Button.Colored"
        android:shadowColor="@android:color/black"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="@+id/movie_name_tv"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <Button
        android:id="@+id/button3"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:text="@string/watch_trailer"
        android:onClick="watchTrailer"
        android:layout_marginTop="@dimen/small_margin"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/large_padding"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/mark_fav"
        app:layout_constraintLeft_toLeftOf="@+id/mark_fav"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/rate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ratingBar"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/ratingBar"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar"
        />
</android.support.constraint.ConstraintLayout>